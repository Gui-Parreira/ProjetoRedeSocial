<div class="form-group row">
  <div class="col-lg-12">
    <a href="/usuario/logout">
      <input type="button" class="btn btn-danger" style="margin-left: 80%; margin-top: 10px;" value="Sair do Sistema">
    </a>
  </div>
</div>
<h1>Lista de Postagens Cadastrados:</h1>
<div class="form-group row">
  <div class="col-md-2 p-10">
    <a href="/postagem/nova">
      <input type="button" class="btn btn-primary" value="Nova Postagem">
    </a>
  </div>
  <div class="form-group row">
    <div class="col-md-2 p-10">
      <a href="/comment/listar">
        <input type="button" class="btn btn-primary" value="Listar Comentários">
      </a>
    </div>
    <div class="form-group row">
    <div class="col-md-2 p-10">
      <a href="/like/listar">
        <input type="button" class="btn btn-primary" value="Listar Curtidas">
      </a>
    </div>
  </div>
<table class="table">
  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Título</th>
      <th scope="col">Conteúdo</th>
      <th scope="col">Usuário</th>
      <th scope="col">Adicionar Comentários</th>
      <th scope="col">Like/Deslike</th>
      <th scope="col">Status Postagem</th>
      <th scope="col">Editar</th>
      <th scope="col">Excluir</th>
    </tr>
  </thead>
  <tbody>
    {{#each postagens}}
    <tr>
      <th scope="row">{{this.dataValues.id}}</th>
      <td>{{this.dataValues.titulo}}</td>
      <td>{{this.dataValues.conteudo}}</td>
      <td>{{this.dataValues.usuario}}</td>
      <td>
        <a href="/comment/novo/{{this.dataValues.id}}">
          <input type="button" value="Novo Comentário">
        </a>
      </td>
      <td><a href="/like/novo/{{this.dataValues.id}}">Like/Deslike</a></td>
      <td class="visible">{{this.dataValues.visivel}}</td>
      <td><a href="/postagem/visivel/{{this.dataValues.id}}">Ativar/Desativar</a></td>
      <td><a href="/postagem/exibir/{{this.dataValues.id}}">Editar</a></td>
      <td><a href="/postagem/excluir/{{this.dataValues.id}}">Excluir</a></td>
    </tr>
    {{/each}}
    {{#if ativa}}
    <div class="alert alert-danger">
      <strong>Status postagem: </strong> {{ativa}}.
    </div>
    {{/if}}

    {{#if curte}}
    <div class="alert alert-danger">
      <strong>Você deu {{curte}} na postagem.</strong>
    </div>
    {{/if}}
  </tbody>
</table>